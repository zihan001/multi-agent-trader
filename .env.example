# Database Configuration
POSTGRES_USER=trading_user
POSTGRES_PASSWORD=trading_password
POSTGRES_DB=trading_db
DATABASE_URL=postgresql://trading_user:trading_password@localhost:5432/trading_db

# LLM Configuration
LLM_API_KEY=your_api_key_here
LLM_PROVIDER=openai  # or openrouter
DAILY_TOKEN_BUDGET=100000

# Model Configuration
CHEAP_MODEL=gpt-3.5-turbo
STRONG_MODEL=gpt-4-turbo-preview

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO

# Binance API (Public - for market data only)
BINANCE_BASE_URL=https://api.binance.com

# Binance Testnet API (Paper Trading)
# Get your FREE testnet API keys from: https://testnet.binance.vision/
# Sign in with GitHub â†’ Generate HMAC_SHA256 Key
BINANCE_TESTNET_ENABLED=false
BINANCE_TESTNET_BASE_URL=https://testnet.binance.vision
BINANCE_TESTNET_API_KEY=your_testnet_api_key_here
BINANCE_TESTNET_API_SECRET=your_testnet_api_secret_here

# Trading Simulation Settings
INITIAL_CASH=10000.0
MAX_POSITION_SIZE_PCT=0.10  # 10% max per asset
MAX_TOTAL_EXPOSURE_PCT=0.80  # 80% max total crypto exposure

# Trading Mode Configuration
TRADING_MODE=llm  # Options: "llm" (AI agents) or "rule" (technical strategies)

# Paper Trading Configuration
# Options: "testnet" (real Binance Testnet API) or "simulation" (local simulation)
# Leave empty or set to "disabled" to disable paper trading features
PAPER_TRADING_MODE=simulation

# Rule-Based Strategy Configuration (when TRADING_MODE=rule)
RULE_STRATEGY=rsi_macd  # Options: "rsi_macd", "ema_crossover", "bb_volume"

# RSI Strategy Parameters
RSI_PERIOD=14
RSI_OVERSOLD=30
RSI_OVERBOUGHT=70

# MACD Strategy Parameters
MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9

# EMA Strategy Parameters
EMA_FAST=12
EMA_SLOW=26
EMA_TREND=50

# Bollinger Bands Parameters
BB_PERIOD=20
BB_STD_DEV=2.0

# Volume Analysis
MIN_VOLUME_RATIO=1.5  # Minimum volume compared to average
